<script type="text/javascript">
    $(document).ready(function(){
        list();
    $(".add").click(function(){
        $(".modal-simpan").modal("show")
        clearForm()
    })
    $(".simpan").click(function(){
        simpan();
    })
    $(".hapus").click(function(){
      var id = $("[name='id']").val()
      Swal.fire({
        title: "Do you want to delete?",
        showCancelButton: true,
        confirmButtonText: "Yes",
      }).then((result) => {
        /* Read more about isConfirmed, isDenied below */
        if (result.isConfirmed) {
          hapus(id)
          Swal.fire("Saved!", "", "success");
        }
      });
    })

    $(".list").on("click","tr#data",function(){
      var id = $(this).attr("kode");
      detail(id);
    })
    });
    function clearForm() {
      $("[name='id']").val('');
      $("[name='nama_banquet']").val('');
      $("[name='time_start']").val('');
      $("[name='time_end']").val('');
    }
    function simpan(){
    var nama_banquet = $("[name='nama_banquet']").val();
    var id = $("[name='id']").val();
    var time_start = $("[name='time_start']").val();
    var time_end = $("[name='time_end']").val();
    if (id!=""){
      var url = '<%= url %>editbanquet_time';
    } else {
      var url = '<%= url %>simpanbanquet_time';
    }
    var formData = {
	  nama_banquet : nama_banquet,
      id : id,
      time_start : time_start,
      time_end : time_end
		}
		$.ajax({
        url: url,
        type: 'post',
        data: formData,
        success: function (data) {
					Swal.fire({
					  title: "Berhasil",
					  text: "Data berhasil "+(id=="" ? "disimpan" : "diedit"),
					  icon: "success",
            position: "top-end",
            showConfirmButton: false,
            timer: 1500
					});
          $(".modal-simpan").modal("hide");
        },
        error: function (data) {
          console.log(data)
        }
    }).done(function(){
      list();
    })
  }
  function hapus(id){
    var url = '<%= url %>hapusbanquet_time';
    var formData = {
      id : id
		}
		$.ajax({
        url: url,
        type: 'post',
        data: formData,
        success: function (row) {
          Swal.fire({
            position: "top-end",
					  title: "Berhasil",
					  text: "Data berhasil dihapus",
					  icon: "info",
            showConfirmButton: false,
            timer: 1500
					});
          list();
          $(".modal-simpan").modal("hide");
        },
        error: function (data) {
          console.log(data)
        }
    })
  }

  function list(){
    $(".loadingdata").show();
    var html = "";
		$.ajax({
				url: '<%= url %>listbanquet_time',
				type: 'post',
				success: function (result) {
					var val = result.data;
          if (result.jml>0){
            html += "<table class='table table-hover'>";
            html += "<thead>";
            html += "<tr class='bg-navy'>";
            html += "<th width='50px'>No.</th>";
            html += "<th>Nama</th>";
            html += "<th>Time Start</th>";
            html += "<th>Time End</th>";
            html += "</thead>";
            html += "<tbody>";
            $.each(val,function(i,row){
              html += "<tr id='data' kode='"+row.id+"'>";
              html += "<td>"+(i+1)+"</td>";
              html += "<td>"+row.nama_banquet+"</td>";
              html += "<td>"+row.time_start+"</td>";
              html += "<td>"+row.time_end+"</td>";
              html += "</tr>";
            });
            html += "</tbody>";
            html += "</table>";
          } else {
            html += "<div class='alert alert-warning'>Data tidak ditemukan</div>";
          }
          $(".list").html(html);
					console.log(val);
				},
				error: function(data){
					console.log(data);
				}
		});
  }
  function detail(id){
    var url = '<%= url %>detailbanquet_time';
    var formData = {
      id : id
		}
		$.ajax({
        url: url,
        type: 'get',
        data: formData,
        success: function (row) {
          var val = row.data[0];
		  $("[name='id']").val(val.id);
          $("[name='nama_banquet']").val(val.nama_banquet);
          $("[name='time_start']").val(val.time_start);
          $("[name='time_end']").val(val.time_end);
          $(".modal-simpan").modal("show");
          console.log(val);
        },
        error: function (data) {
          console.log(data)
        }
    })
  }


</script>
<div class="row">
	<div class="col-xs-12">
		<div class="box box-primary">
			<div class="box-header with-border">
        <h3 class="box-title">&nbsp;Banquet Time</h3>
        <div class="box-tools pull-right">
            <button class="add no-border btn-success btn-sm"><i class="fa fa-plus"></i>&nbsp;Add</button>
        </div>
      </div>
			<div class="box-body">
        <div class="row">
          <div class="clearfix">&nbsp;</div>
				  <div class="col-xs-12">
            <div class="list table-responsive"></div>
          </div>
        </div>
      </div>
		</div>
	</div>
</div>
<div class='modal modal-simpan no-print' role="dialog">
    <div class='modal-dialog'>
        <div class='modal-content'>
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <h4 class='modal-title'><i class="icon fa fa-warning"></i>&nbsp;&nbsp;Floor</h4>
            </div>
            <div class='modal-body'>
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-8">
                            <input type="hidden" name="id">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Nama</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" name="nama_banquet">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Time Start</label>
                        <div class="col-md-9">
                            <input type="time" class="form-control" name="time_start">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Time End</label>
                        <div class="col-md-9">
                            <input type="time" class="form-control" name="time_end">
                        </div>
                    </div>
                </div>
            </div>
            <div class='modal-footer'>
                <div class="pull-right">
                    <button class="simpan btn bg-blue"><i class="fa fa-save"></i>&nbsp;Save</button>
                    <button class="hapus btn bg-red"><i class="fa fa-minus"></i>&nbsp;Delete</button>
                </div>
            </div>
        </div>
    </div>
</div>
